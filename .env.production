# AIMO3 Production Environment Configuration
# Copy this to .env and fill in actual values
# NEVER commit .env to git - add to .gitignore

# ============================================================
# Kaggle Configuration
# ============================================================
KAGGLE_API_KEY=your_kaggle_api_key_here
KAGGLE_USERNAME=your_kaggle_username_here

# ============================================================
# Model Configuration
# ============================================================
MODEL_NAME=Open-Orca/orca_mini_3b
DEVICE=auto
TORCH_DTYPE=float16
LOAD_IN_8BIT=false
LOAD_IN_4BIT=false

# ============================================================
# Redis Cache Configuration
# ============================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=secure_redis_password_here
REDIS_DB=0
REDIS_PORT=6379
CACHE_MAX_SIZE=10000
CACHE_TTL_SECONDS=3600

# ============================================================
# Database Configuration (if using PostgreSQL)
# ============================================================
DB_TYPE=postgresql
DB_USER=aimo3
DB_PASSWORD=secure_db_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aimo3
DB_POOL_SIZE=20

# ============================================================
# API Configuration
# ============================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_KEY=your_api_key_for_authentication_here

# ============================================================
# Logging Configuration
# ============================================================
LOG_LEVEL=INFO
LOG_FILE=logs/aimo3.log
LOG_FORMAT=json

# ============================================================
# Monitoring & Observability
# ============================================================
MONITORING_ENABLED=true
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8001
METRICS_COLLECTION_INTERVAL=60

# ============================================================
# Security Configuration
# ============================================================
SECRET_KEY=your_secret_key_for_signing_requests_here
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_FILE=logs/audit.log
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================
# Performance Configuration
# ============================================================
BATCH_SIZE=32
MAX_TOKENS=512
TEMPERATURE=0.7
TOP_P=0.9
INFERENCE_TIMEOUT_SECONDS=60

# ============================================================
# Deployment Environment
# ============================================================
ENVIRONMENT=production
VERSION=1.0.0

# ============================================================
# Third-party Services (Optional)
# ============================================================
# For error tracking (e.g., Sentry)
SENTRY_DSN=

# For log aggregation (e.g., Datadog)
DATADOG_API_KEY=

# For notification (e.g., Slack)
SLACK_WEBHOOK_URL=

# ============================================================
# GPU Configuration
# ============================================================
CUDA_VISIBLE_DEVICES=0
CUDA_LAUNCH_BLOCKING=0

# ============================================================
# Backup & Snapshot Configuration
# ============================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups/aimo3

# ============================================================
# Feature Flags
# ============================================================
FEATURE_SYMBOLIC_VERIFICATION=true
FEATURE_CACHING=true
FEATURE_FALLBACK_MODELS=false
